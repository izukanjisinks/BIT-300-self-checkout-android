<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/hsdk__small_padding"
    android:layout_margin="@dimen/hsdk__small_padding"
    android:elevation="@dimen/hsdk__small_padding"
    android:background="@color/hsdk_transparent_neutral"
    tools:ignore="Overdraw">

    <ImageView android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/hsdk__small_padding"
        android:background="@color/hsdk_transparent"
        android:tint="@color/hsdk_vertical_line"
        android:src="@drawable/hsdk_ic_close"
        android:contentDescription="@string/hsdk_close"/>

    <TextView android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/hsdk__tiny_padding"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/close_btn"
        android:gravity="center_vertical"
        android:textColor="@color/hsdk_white"
        android:text="@string/hsdk_access_find"
        tools:text="Find and Tap Hover Gateway then turn it ON"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/explain"
        android:paddingTop="@dimen/hsdk__small_padding"
        android:paddingBottom="@dimen/hsdk__small_padding"
        android:paddingStart="@dimen/hsdk__standard_padding"
        android:paddingEnd="@dimen/hsdk__standard_padding"
        android:background="@color/hsdk_white">

        <TextView android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hsdk_android_settings_li_main"
            android:text="@string/hsdk_app_name_literal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hsdk_android_settings_li_sub"
            android:text="@string/hsdk_off"/>
    </LinearLayout>

</RelativeLayout>