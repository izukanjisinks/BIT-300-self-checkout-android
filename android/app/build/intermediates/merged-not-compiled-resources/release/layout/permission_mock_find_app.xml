<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView android:id="@+id/phone_top_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true"
		android:scaleType="fitStart"
		android:adjustViewBounds="true"
		android:contentDescription="@string/hsdk_phone_top_ic"
		android:src="@drawable/hsdk_svg_phone_top"/>

	<include android:id="@+id/content"
		layout="@layout/permission_access_list" />

	<View
		android:layout_width="3dp"
		android:layout_height="match_parent"
		android:layout_alignTop="@id/content"
		android:layout_alignBottom="@id/content"
		android:layout_alignParentStart="true"
		android:layout_marginStart="0dp"
		android:background="@color/hsdk_phone_color"/>

	<View
		android:layout_width="3dp"
		android:layout_height="match_parent"
		android:layout_alignTop="@id/content"
		android:layout_alignBottom="@id/content"
		android:layout_alignParentEnd="true"
		android:layout_marginEnd="1dp"
		android:background="@color/hsdk_phone_color"/>

	<TextView android:id="@+id/step_no_one"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/content"
		android:layout_marginStart="@dimen/hsdk__small_padding"
		android:textStyle="bold"
		android:textColor="@color/hsdk_dark_text"
		android:textSize="20sp"
		android:text="@string/hsdk_access_step_1"/>

	<TextView android:id="@+id/help_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/step_no_one"
		android:layout_marginStart="@dimen/hsdk__small_padding"
		android:textColor="@color/hsdk_dark_text"
		android:textSize="20sp"
		android:text="@string/hsdk_access_step_1_explain"/>

</RelativeLayout>