<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:importantForAccessibility="noHideDescendants">

	<include android:id="@+id/pin_dot_layout"
	    layout="@layout/transacting_pin_dots"/>

	<include android:id="@+id/pin_pad_layout"
	    layout="@layout/transacting_pin_pad"/>

	<LinearLayout android:id="@+id/btn_bar_pin"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:layout_marginBottom="8dp"
	    android:layout_height="wrap_content">

		<Button android:id="@+id/pin_back"
		    android:background="@drawable/back_button_bg"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_gravity="center"
		    android:layout_margin="@dimen/hsdk__small_padding"
		    android:padding="@dimen/hsdk__standard_padding"
		    android:textAllCaps="false"
		    android:singleLine="true"
		    android:text="@string/hsdk_back"
		    android:textColor="?attr/hover_textColor"
		    android:onClick="backToConfirm" />

		<Button
		    android:id="@+id/confirm"
		    android:background="@drawable/confirmbutton_bg"
		    android:layout_height="wrap_content"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:singleLine="true"
		    android:layout_margin="@dimen/hsdk__small_padding"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:padding="@dimen/hsdk__standard_padding"
		    android:enabled="false"
		    android:textAllCaps="false"
		    android:textColor="@color/colorPureWhite"
		    android:text="@string/hsdk_confirm"
		    android:onClick="checkPin" />

	</LinearLayout>

</RelativeLayout>